<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/line1"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_toStartOf="@+id/logInHint"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:alpha=".70"
        android:src="@drawable/line" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_toEndOf="@+id/logInHint"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:alpha=".70"
        android:src="@drawable/line" />

    <ImageView
        android:id="@+id/emailRectangle"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/logInHint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_54sdp"
        android:alpha=".75"
        android:src="@drawable/edittext_bg" />

    <EditText
        android:id="@+id/email_reset"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/logInHint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_59sdp"
        android:hint="Email address"
        android:textColorHint="#B2FFFFFF"
        android:textColor="#ffffff"
        android:gravity="center"
        android:fontFamily="@font/sfuid_thin"
        android:singleLine="true"
        android:background="@null"
        />

    <Button
        android:id="@+id/resetPasswordBtnreset"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/email_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:alpha=".70"
        android:background="@drawable/login_rectangle"
        android:fontFamily="@font/sfuid_regular"
        android:text="Send Verify Email"
        android:textColor="#E6FFFFFF"
        android:textSize="@dimen/_14ssp" />


</RelativeLayout>